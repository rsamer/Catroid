<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoFadeColor="@color/application_background_color"
    sothree:umanoPanelHeight="48dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/progress_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_bar_header"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <fragment
            android:id="@+id/fragment_scratch_search_projects_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="org.catrobat.catroid.ui.fragment.ScratchSearchProjectsListFragment"
            tools:layout="@layout/fragment_scratch_search_projects_list" />
    </FrameLayout>

    <!-- SLIDING LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button_background_gradient_end_color"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">

        <View
            android:id="@+id/separation_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spritelist_separation_line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/scratch_convert_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/views_72x72"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/scratch_convert_icon"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/scratch_convert_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dancin' in the Castle"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scratch_convert_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_below="@+id/scratch_convert_headline"
                    android:text="Already started..."
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/scratch_up_down_image_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/default_drone_project_orange_arrow_up"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <View
            android:id="@+id/separation_line2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spritelist_separation_line_color" />

        <TextView
            android:id="@+id/scratch_convert_panel_console"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minLines="20"
            android:maxLines="80"
            android:scrollbars = "vertical"
            android:background="@color/black"
            android:textColor="@color/white"
            android:gravity="bottom" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/application_background_color">
        </ListView>

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
